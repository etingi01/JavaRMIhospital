import java.sql.*;
import java.util.*;
 
public class AstheneisTravmaRepository {

	

	  public static int save(AstheneisTravma p) throws ClassNotFoundException {
	    int iRet = -1;
	    try {
	      Connection con = DBManager.getConnection();
	      String SQL = "INSERT INTO astheneistrauma(codeTrauma, kodAsthenei, onoma, epwnimo, email, tilefwno, codeType) Values(?,?,?,?,?,?,?)";
	      PreparedStatement pstmt = con.prepareStatement(SQL);
	      pstmt.setInt(1, p.getPassword());
	      pstmt.setString(2, p.getUsername());
	      pstmt.setString(3, p.getOnoma());
	      pstmt.setString(4, p.getEpwnimo());
	      pstmt.setString(5, p.getEmail());
	      pstmt.setString(6, p.getTilefwno());
	      pstmt.setInt(7, p.getCodeType());

	      iRet = pstmt.executeUpdate();
	 
	      pstmt.close();
	    } catch (SQLException se) {
	      System.out.println(se);
	    }
	 
	    return iRet;
	  }
}
